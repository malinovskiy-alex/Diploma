<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.malinovsky.kafedra.model"
	default-cascade="save-update">
	<class name="Product" table="PRODUCT">
		<id name="id" column="PRODUCT_ID">
			<generator class="identity"></generator>
		</id>
		<property name="name" column="NAME" type="string"></property>
		<property name="priceByOne" column="PRICE_BY_ONE" type="double"></property>
		<property name="type" column="CALCULATION_TYPE">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.malinovsky.kafedra.model.CalculationType</param>
				<param name="type">12</param>
			</type>
		</property>
		<many-to-one name="vendor" class="Vendor" column="VENDOR_ID"></many-to-one>
		<set name="dishes" cascade="all">
			<key column="PRODUCT_ID" />
			<one-to-many class="DishProduct" />
		</set>
		<set name="cafes" cascade="all">
			<key column="PRODUCT_ID" />
			<one-to-many class="CafeProduct" />
		</set>
	</class>
</hibernate-mapping>