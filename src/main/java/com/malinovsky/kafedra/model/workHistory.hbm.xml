<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.malinovsky.kafedra.model"
	default-cascade="save-update">
	<class name="WorkHistory" table="WORK_HISTORY">
		<id name="id" column="HISTORY_ID">
			<generator class="identity"></generator>
		</id>
		<property name="date" column="DATE" type="timestamp"></property>
		<property name="payed" column="PAYED" type="boolean"></property>
		<property name="type" column="DAY_TYPE">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.malinovsky.kafedra.model.DayType</param>
				<param name="type">12</param>
			</type>
		</property>
		<many-to-one name="employer" column="EMPLOYER_ID" />
	</class>
</hibernate-mapping>